{% extends 'base.html.twig' %}

{% block body %}
    <h1>Welcome bloggy !!!</h1>

    {% for post in posts %}
        <article>
            <h2><a href="{{ path('app_posts_show', { slug : post.slug }) }}">{{ post.title }}</a></h2>
            <p>{{ post.body }}</p>
        </article>
    {% endfor %}
{% endblock %}
